@model ThriftManager.DTO.Requests.CreateContributionRequest

<!-- Link to Bootstrap CSS for styling -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<form asp-action="CreateContribution" method="post" class="p-4 border rounded shadow-sm bg-light">
    <div class="form-group">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GroupId" class="form-label"></label>
        <input asp-for="GroupId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create Contribution</button>
</form>
