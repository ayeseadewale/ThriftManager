@model ThriftManager.DTO.Requests.CreateMemberRequest

@{
    ViewData["Title"] = "Create Member";
}

<h2>Create Member</h2>
<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="FirstName" class="control-label">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="LastName" class="control-label">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="OtherNames" class="control-label">Other Name</label>
            <input asp-for="OtherNames" class="form-control" />
            <span asp-validation-for="OtherNames" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="MobileNumber" class="control-label">Mobile Number</label>
            <input asp-for="MobileNumber" class="form-control" />
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="NIN" class="control-label">NIN</label>
            <input asp-for="NIN" class="form-control" />
            <span asp-validation-for="NIN" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="Gender" class="control-label">Gender</label>
            <select asp-for="Gender" class="form-control">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="DateOfBirth" class="control-label">Date of Birth</label>
            <input asp-for="DateOfBirth" class="form-control" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="Account.AccountNumber" class="control-label">Account Number</label>
            <input asp-for="Account.AccountNumber" class="form-control" />
            <span asp-validation-for="Account.AccountNumber" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Account.AccountName" class="control-label">Account Name</label>
            <input asp-for="Account.AccountName" class="form-control" />
            <span asp-validation-for="Account.AccountName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="Account.BVN" class="control-label">BVN</label>
            <input asp-for="Account.BVN" class="form-control" />
            <span asp-validation-for="Account.BVN" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Account.BankId" class="control-label">Bank ID</label>
            <input asp-for="Account.BankId" class="form-control" />
            <span asp-validation-for="Account.BankId" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Create Membership Account" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
