@model ThriftManager.Web.Models.SummaryViewModel

@{
    ViewData["Title"] = "Contribution Summary";
}

<h2>Contribution Summary for @Model.MemberName</h2>

<p>Here are the contributions you have selected:</p>

<ul>
    @foreach (var menu in @Model.SelectedMenus)
    {
        <li>@menu</li>
    }
</ul>

<p>Thank you for your selections. You can proceed with your contributions.</p>
<button class="btn btn-primary">Make Contribution</button>